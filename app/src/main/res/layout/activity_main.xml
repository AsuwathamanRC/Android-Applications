<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:textColor="@color/numberButton"
        android:ellipsize="start"
        android:gravity="end"
        android:textSize="60sp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:textColor="@color/numberButton"
        android:ellipsize="end"
        android:gravity="end"
        android:textSize="70sp"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#526082"
        android:fadingEdge="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvClear"
                style="@style/ActionButtonStyle"
                android:background="#00FFFFFF"
                android:text="CE"
                android:textColor="#FF5722"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvOpen"
                style="@style/ActionButtonStyle"
                android:background="#00FFFFFF"
                android:text="("
                android:textColor="#FF5722"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/tvClose"
                style="@style/ActionButtonStyle"
                android:background="#00FFFFFF"
                android:text=")"
                android:textColor="#FF5722"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/tvDivide"
                style="@style/ActionButtonStyle"
                android:background="#00FFFFFF"
                android:text="/"
                android:textColor="#FF5722"
                android:textSize="50sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSeven"
                style="@style/NumberButtonStyle"
                android:background="#FFFFFF"
                android:text="7"
                android:textColor="#526082"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvEight"
                style="@style/NumberButtonStyle"
                android:background="#FFFFFF"
                android:text="8"
                android:textColor="#526082"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvNine"
                style="@style/NumberButtonStyle"
                android:background="#FFFFFF"
                android:text="9"
                android:textColor="#526082"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvMul"
                style="@style/ActionButtonStyle"
                android:background="#00FFFFFF"
                android:text="*"
                android:textColor="#FF5722"
                android:textSize="60sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFour"
                style="@style/NumberButtonStyle"
                android:background="#FFFFFF"
                android:text="4"
                android:textColor="#526082"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvFive"
                style="@style/NumberButtonStyle"
                android:background="#FFFFFF"
                android:text="5"
                android:textColor="#526082"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvSix"
                style="@style/NumberButtonStyle"
                android:background="#FFFFFF"
                android:text="6"
                android:textColor="#526082"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvMinus"
                style="@style/ActionButtonStyle"
                android:background="#00FFFFFF"
                android:text="-"
                android:textColor="#FF5722"
                android:textSize="90sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOne"
                style="@style/NumberButtonStyle"
                android:background="#FFFFFF"
                android:text="1"
                android:textColor="#526082"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvTwo"
                style="@style/NumberButtonStyle"
                android:background="#FFFFFF"
                android:text="2"
                android:textColor="#526082"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvThree"
                style="@style/NumberButtonStyle"
                android:background="#FFFFFF"
                android:text="3"
                android:textColor="#526082"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvPlus"
                style="@style/ActionButtonStyle"
                android:background="#00FFFFFF"
                android:text="+"
                android:textColor="#FF5722"
                android:textSize="60sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDot"
                style="@style/NumberButtonStyle"
                android:background="#FFFFFF"
                android:gravity="center_horizontal|top"
                android:text="."
                android:textColor="#526082"
                android:textSize="70sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvZero"
                style="@style/NumberButtonStyle"
                android:background="#FFFFFF"
                android:text="0"
                android:textColor="#526082"
                android:textSize="50sp" />

            <ImageView
                android:id="@+id/tvBack"
                style="@style/NumberButtonStyle"
                android:background="#FFFFFF"
                android:scaleType="center"
                android:src="@drawable/backspace"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:tint="@color/numberButton"/>

            <TextView
                android:id="@+id/tvEquals"
                style="@style/ActionButtonStyle"
                android:background="@drawable/rounded_corner"
                android:scaleX="0.85"
                android:scaleY="0.75"
                android:text="="
                android:textSize="90sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>